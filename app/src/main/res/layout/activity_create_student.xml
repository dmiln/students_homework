<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <android.support.constraint.Guideline
        android:id="@+id/activity_create_student__horizontal_line_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <android.support.constraint.Guideline
        android:id="@+id/activity_create_student__horizontal_line_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />

    <android.support.constraint.Guideline
        android:id="@+id/activity_create_student__vertical_line_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/student_title"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/activity_create_student__horizontal_line_1" />

    <ImageView
        android:id="@+id/activity_create_student__avatar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_create_student__horizontal_line_1"
        app:layout_constraintEnd_toStartOf="@id/activity_create_student__vertical_line_1"
        app:layout_constraintBottom_toTopOf="@id/activity_create_student__horizontal_line_2" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="@id/activity_create_student__vertical_line_1"
        app:layout_constraintTop_toBottomOf="@id/activity_create_student__horizontal_line_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/activity_create_student__horizontal_line_2">

        <EditText
            android:id="@+id/activity_create_student__second_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:hint="@string/hint_second_name"/>

        <EditText
            android:id="@+id/activity_create_student__first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:hint="@string/hint_name"/>

        <CheckBox
            android:id="@+id/activity_create_student__gender_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/male_gender"/>

    </LinearLayout>

    <Button
        android:id="@+id/activity_create_student__save_button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@string/save_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_create_student__horizontal_line_2"
        app:layout_constraintEnd_toStartOf="@+id/activity_create_student__delete_button"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/activity_create_student__delete_button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@string/delete_button"
        app:layout_constraintStart_toEndOf="@id/activity_create_student__save_button"
        app:layout_constraintTop_toBottomOf="@id/activity_create_student__horizontal_line_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>